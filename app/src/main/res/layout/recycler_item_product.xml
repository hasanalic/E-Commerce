<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/materialCardProductItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="6dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            tools:src="@drawable/googleg_standard_color_18" />

        <TextView
            android:id="@+id/textViewProductBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/coal_dark"
            android:layout_marginBottom="4dp"
            tools:text="Apple"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewProductDetail"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            tools:text="2020 Apple MacBook Air Laptop: Apple M1 Chip, 13” Retina Display, 8GB RAM, 256GB SSD Storage, Backlit Keyboard, FaceTime HD Camera, Touch ID. Works with iPhone/iPad; Silver"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/font_secondary" />

        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="₺99.84"
            android:textSize="14sp"
            android:textColor="@color/coal_dark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/font_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4.7"
                android:textSize="11sp"
                android:textColor="@color/coal_dark" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewStarOne"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/imageViewStarTwo"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/imageViewStarThree"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/imageViewStarFour"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/imageViewStarFive"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star_half" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(39)"
                android:textSize="11sp"
                android:textColor="@color/coal_dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <Button
                android:id="@+id/buttonAddCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginEnd="18dp"
                android:padding="10dp"
                android:text="@string/add_cart"
                android:textSize="11sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/Base.Theme.Ecommerce">

                <ImageView
                    android:id="@+id/imageViewFavorite"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    tools:background="@drawable/favorite_orange" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkboxCompare"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="start|center_vertical"
            android:text="@string/add_compare"
            android:textSize="10sp"
            android:textColor="@color/font_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
