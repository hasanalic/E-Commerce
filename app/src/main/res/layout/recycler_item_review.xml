<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="10dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewProfilePhoto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:src="@color/color_primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    tools:text="Batu"
                    android:textSize="13sp"
                    android:textColor="@color/font_secondary"
                    android:fontFamily="@font/inter_semibold"/>

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12-04-2023"
                    android:textColor="@color/font_secondary"
                    android:textSize="10sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewStarOne"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/imageViewStarTwo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/imageViewStarThree"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/imageViewStarFour"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:id="@+id/imageViewStarFive"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/verified"
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/font_third"
                android:fontFamily="@font/inter_bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewReviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/font_secondary"
            android:layout_marginTop="4dp"
            tools:text="Harika bir ürün!!!"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/textViewReviewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/font_secondary"
            android:fontFamily="@font/inter_medium"
            tools:text="Cidden harika bir üründü, ayrıca kargo da çok hızlı geldi o yüzden çalışan herkese çok teşekkür ederim." />

        <ImageView
            android:id="@+id/imageViewProductPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            tools:src="@drawable/google"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>